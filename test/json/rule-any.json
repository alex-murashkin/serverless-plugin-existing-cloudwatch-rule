{
  "NamedFunctionLambdaPermissionANY": {
    "Properties": {
      "Action": "lambda:InvokeFunction",
      "FunctionName": {
        "Fn::GetAtt": [
          "NamedFunctionLambdaFunction",
          "Arn"
        ]
      },
      "Principal": "events.amazonaws.com",
      "SourceArn": {
        "Fn::Join": [
          ":", [
            "arn:aws:events",
            {
              "Ref": "AWS::Region"
            },
            {
              "Ref": "AWS::AccountId"
            },
            "*"
          ]
        ]
      }
    },
    "Type": "AWS::Lambda::Permission"
  }
}
